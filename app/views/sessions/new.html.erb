<section class="login">

  <header class="page-header">
    <h1>Login</h1>
  </header>

  <div class="row">
  <% if @error %>
  
    <div> 
    <p><%= @error %></p>
    </div>
  <% end %>
    <div class="col-sm-2 col-sm-offset-1">
      <%= form_for :user, url: '/login' do |form| %>

        <div class="form-group">
          <%= form.label :email %>
          <%= text_field_tag :email %>
        </div>

        <div class="form-group">
          <%= form.label :password %>
          <%= password_field_tag :password %>
        </div>
          <%= submit_tag "Submit", class: 'btn btn-primary' %>

      <% end %>
    </div>
  </div>